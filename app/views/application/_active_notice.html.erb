<%= notice.hidden_field :wx_mp_user_id %>
<div class="form-group">
  <label class="control-label">活动开始微信消息标题<span class="required-star">*</span><span class="icon-question-sign" data-rel="popover" data-trigger="hover" data-placement="right" data-content="发送关键词后返回的微信消息标题"></span></label>
  <div class="clearfix">
    <%= notice.text_field :title, class: 'col-xs-6', id: 'wx_title',  placeholder: '请输入微信消息标题' %>
  </div>
</div>

<div class="form-group">
  <label class="control-label">活动开始微信消息图片<span class="icon-question-sign" data-rel="popover" data-trigger="hover" data-placement="right" data-content="发送关键词后返回的微信消息图片"></span></label>
  <div class="clearfix">
    <div data-name="activity[active_activity_notice_attributes][qiniu_pic_key]" data-img = "<%= data_img %>" data-key="<%= pic_data_key %>" class="cieldon-file width-100px" data-type="1" data-div="#img-1" data-height="200"></div>
    <small class="help-inline text-warning line-height-30">图片建议尺寸：720像素*400像素</small>
  </div>
</div>

<div class="form-group">
  <label class="control-label">活动开始微信消息摘要<span class="icon-question-sign" data-rel="popover" data-trigger="hover" data-placement="right" data-content="发送关键词后返回的微信消息摘要"></span></label>
  <div class="clearfix">
    <%= notice.text_area :summary, rows: 5, class: 'form-control', id: 'wx_summary', placeholder: '不能超过128个字', maxlength: 128 %>
  </div>
</div>

<div class="form-group">
    <label>
        活动开始说明
        <span class="required-star">*</span>
    </label>
    <div class="clearfix">
        <%= render "shared/form_rich_text", field_name: "description", obj: notice.object, f: notice, wrapper_html_options: {class: "col-md-11 activity_notice_description"}%>
    </div>
</div>
