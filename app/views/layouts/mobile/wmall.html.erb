<!doctype html>
<html xmlns="http://www.w3.org/1999/html">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta content="black" name="apple-mobile-web-app-status-bar-style">
  <meta name="format-detection" content="telephone=no">
  <meta content="telephone=no" name="format-detection">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title><%= @title || @current_wmall_titles.present? ? @current_wmall_titles.join("－－－") : "微商圈"%></title>
	<%#= stylesheet_link_tag( 'mobile/wmall' ) %>
  <link type="text/css" rel="stylesheet" href="/mobile/css/winwemediaV02.css"/>
  <link type="text/css" rel="stylesheet" href="/mobile/css/font/font-awesome.min.css"/>
  <link type="text/css" rel="stylesheet" href="/mobile/css/wbusiness2.css"/>
  <%= javascript_include_tag( 'mobile/wmall' ) %>
  <%= yield(:head) if content_for?(:head) %>

  <%= javascript_tag do %>
    window.auth_params = <%=raw auth_params.to_json %>;
  <% end %>
</head>
<body>
  <%= render 'application/gb2big5' %>
<script src="/mobile/js/lib/swipe.js"></script>
<script src="/mobile/js/winwemediaV02.js"></script>

<% unless content_for?(:html_div) %>
  <%= content_tag :div, class: "html", id: "html" do%>
    <div class="stage" id="stage">
      <%= yield %>
      <%= content_for?(:foot) ? yield(:foot) : render("mobile/wmall/shared/foot" ) %>
    </div>
  <% end %>
<% else %>
  <%= yield(:html_div) %>
<% end %>

<footer><a href="http://www.winwemedia.com/">@微枚迪（winwemedia.com）</a></footer>

<%= yield(:insert_to_body) if content_for?(:insert_to_body) %>
</body>
</html>
