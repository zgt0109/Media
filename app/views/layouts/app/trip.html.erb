<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta content="black" name="apple-mobile-web-app-status-bar-style">
	<meta name="format-detection" content="telephone=no">
	<meta content="telephone=no" name="format-detection">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title><%= @activity.try(:name) || @trip.name || "微旅游"%></title>
	<%= stylesheet_link_tag "mobile/main","mobile/wtrave" %>
  <%= javascript_include_tag "mobile/lib/jquery", "mobile/lib/swipe", "mobile/main" %>
</head>
<body class="<%= @class %>">
  <%= render 'application/gb2big5' %>
	<div class="html">
		<div class="main">
			<%= yield %>
		</div><!-- main end -->
	</div><!-- html end -->
	<%= render "application/app_footer" %>
</body>
<script>
<% if flash[:notice] || flash[:alert] %>
alert("<%= flash[:notice] || flash[:alert] %>");
<% end %>
</script>

</html>

