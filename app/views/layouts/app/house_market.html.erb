<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta content="black" name="apple-mobile-web-app-status-bar-style">
  <meta name="format-detection" content="telephone=no">
  <meta content="telephone=no" name="format-detection">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title><%=  content_for?(:title) ? yield(:title) : "微楼盘" %></title>
  <link type="text/css" rel="stylesheet" href="/stylesheets/house_market/main.css"/>
  <link type="text/css" rel="stylesheet" href="/stylesheets/house_market/wbuild.css"/>
  <script type="text/javascript" src="/javascripts/jquery-1.8.2.min.js"></script>
  <script src="/javascripts/app/website/swipe.js"></script>
  <script src="/javascripts/app/life/main.js"></script>
  <style type="text/css">
    footer{height:30px;line-height:30px;border-top:1px solid #ccc;text-align:center;}
    footer a{color:#888;text-decoration:none;font-family: Arial;font-size: 14px;}
  </style>
</head>

    <%= yield %>
</div><!-- html end -->
<% unless params[:controller] == "app/house_layouts" && params[:action] == "show"%>
  <% if @supplier && @supplier_footer && @supplier.try(:is_show_mark?) %>
    <footer>
      <%= @supplier_footer.is_show_link? ? link_to(@supplier_footer.footer_content, @supplier_footer.footer_link) : @supplier_footer.footer_content %>
    </footer>
  <%- else %>
    <%- supplier = Supplier.find_by_nickname('winwemedia') %>
    <%- supplier_footer = supplier.try(:app_footer) || SupplierFooter.default_footer %>
    <%- if supplier && supplier_footer && supplier.is_show_mark? %>
      <footer>
        <%= supplier_footer.is_show_link? ? link_to(supplier_footer.footer_content, supplier_footer.footer_link) : supplier_footer.footer_content %>
      </footer>
    <%- end %>
  <% end %>
<% end %>

<%= render 'application/gb2big5' %>

<%= render "application/mobile_footer" %>

</body>
</html>
<script>
    <% if flash[:notice] || flash[:alert] %>
    alert("<%= flash[:notice] || flash[:alert] %>");
    <% flash[:notice]= nil; flash[:alert] = nil %>
    <% end %>
</script>
